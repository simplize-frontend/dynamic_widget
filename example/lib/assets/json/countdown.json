{
  "version": 2,
  "type": "Root",
  "displayTime": 1000,
  "mode": "sticky",
  "width": "100",
  "height": "80",
  "transition": "fade",
  "transitionFrom": "top",
  "borderRadius": "0,0,0,0",
  "display": {
    "full": false,
    "position": "bottomRight"
  },
  "child": {
    "type": "ContainerWidget",
    "decoration": {
      "margin": "0,0,0,0",
      "padding": "0,0,0,0",
      "borderRadius": "0,0,0,0"
    },
    "width": "expand",
    "height": "80",
    "child": {
      "type": "Stack",
      "alignment": "center",
      "clipBehavior": "none",
      "fit": "loose",
      "children": [
        {
          "type": "GestureDetectorWidget",
          "onClick": "https://simplize.vn/",
          "child": {
            "type": "AlignWidget",
            "y": -1,
            "start": -1,
            "child": {
              "type": "ContainerWidget",
              "decoration": {
                "margin": "0,0,0,0",
                "padding": "0,0,0,0",
                "borderRadius": "0,0,0,0"
              },
              "width": "80",
              "height": "80",
              "child": {
                "type": "NetworkImageWidget",
                "imageUrl": "https://static.simplize.vn/static/image/sale-30-dark.png",
                "fit": "contain"
              }
            }
          }
        },
        {
          "type": "GestureDetectorWidget",
          "child": {
            "type": "AlignWidget",
            "y": -1,
            "start": 0.5,
            "child": {
              "type": "ContainerWidget",
              "alignment": "center",
              "decoration": {
                "margin": "0,0,0,0",
                "padding": "0,0,0,0",
                "borderRadius": "8,8,8,8",
                "color": "#BD6600"
              },
              "width": "16",
              "height": "16",
              "child": {
                "type": "Icon",
                "data": "close",
                "color": "#ffffff",
                "size": 16
              }
            }
          }
        }
      ]
    }
  }
}